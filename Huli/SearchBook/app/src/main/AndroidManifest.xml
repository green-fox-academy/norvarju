<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenfoxacademy.searchbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".actions.action.SearchBook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actions.action.SearchBySubject" />
        <activity android:name=".actions.action.SearchByAuthor" />
        <activity android:name=".actions.action.SearchById" />
        <activity android:name=".actions.action.AuthorResult" />
        <activity android:name=".actions.action.SubjectResult" />
        <activity android:name=".actions.action.IDResult"></activity>
    </application>

</manifest>